<div class="container">
  <%= form_for [@post.topic, @post] do |f| %>
  <div class="col-md-10">
    <div class="row">
      <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :body, rows: 8, class: 'form-control' %>
      </div>

      <div class="form-group">
           <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    </div>
  </div>
  <% end %>
</diV>
