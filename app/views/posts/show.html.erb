<div class="container">
  <div class="col-md-8">
    <div class="row">
      <h1><%= @post.title %></h1>
       <p><%= @post.body %></p>
    </div>
    <div class="row">
      <table>
        <li><%= link_to "Edit", edit_topic_post_path(@post.topic, @post), class: 'btn btn-success' %></li>
        <li><%= link_to "Delete Post", [@post.topic, @post], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %></li>
      </table>
    </div>
  </div>
</div>
