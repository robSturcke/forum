<div class="media">
   <div class="media-body">
     <small>
       <%= comment.user.username %> commented <%= time_ago_in_words(comment.created_at) %> ago
       <% if user_is_authorized_for_comment?(comment) %>
         | <%= link_to "Delete Comment", [comment.post, comment], class: "fa fa-remove", method: :delete, remote: true %>
       <% end %>
     </small>
     <p><%= comment.body %></p>
   </div>
 </div>
