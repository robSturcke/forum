<div class="container">
  <h1>Current Homebrewing Threads</h1>

   <div class="row">
     <% if current_user %>
     <div class="col-md-4">
       <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
     </div>
     <% end %>
     <div class="col-md-8">
       <% @topics.each do |topic| %>
         <div class="media">
           <div class="media-body">
             <h4 class="media-heading">
               <%= link_to topic.name, topic %>
             </h4>
             <small>
               <%= topic.description %>
             </small>
           </div>
         </div>
       <% end %>
     </div>
   </div>
</div>
